<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CustomLightTheme" parent="android:Theme.Holo.Light">
        <item name="drawer_item_background">#F3F3F4</item>
        <item name="preferences_title_light">@color/text_light</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="item_selector">@drawable/item_selector_light</item>
    </style>

    <style name="Theme.CustomDarkTheme" parent="android:Theme.Holo">
        <item name="drawer_item_background">#58585a</item>
        <item name="preferences_title_light">@android:color/secondary_text_dark</item>
        <item name="item_selector">@drawable/item_selector_dark</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.StartTheme" parent="android:Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Drawer" parent="@android:style/Widget.TextView" />

    <style name="Drawer.Category" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <!--<item name="android:background">@drawable/md__category_background</item>-->

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>