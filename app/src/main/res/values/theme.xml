<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CustomLightTheme" parent="Theme.AppCompat.Light">
        <item name="drawer_item_background">@color/drawer</item>
        <item name="section_background">@drawable/actionbar_background_textured</item>
        <item name="activity_background">@android:color/background_light</item>
        <item name="cards_background">@android:color/background_light</item>
        <item name="floating_button_color">@color/floating_button_colorLight</item>
        <item name="preferences_title_light">#66000000</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="text_transparent_background">@drawable/transparent_text_light</item>
        <item name="item_selector">@drawable/item_selector_light</item>
        <item name="segment_button">@drawable/segment_button_light</item>
        <item name="toolbar_style">@style/ToolBarStyle</item>
        <item name="segment_radio_left">@drawable/segment_radio_left_light</item>
        <item name="segment_radio_middle">@drawable/segment_radio_middle_light</item>
        <item name="segment_radio_right">@drawable/segment_radio_right_light</item>
        <item name="ic_action_view_as_list">@drawable/ic_action_view_as_list</item>
        <item name="ic_action_view_as_grid">@drawable/ic_action_view_as_grid</item>
        <item name="colored_button">@style/Colored_Button.Customlighttheme</item>

        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorSecondaryLight</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
    </style>

    <style name="Theme.CustomDarkTheme" parent="Theme.AppCompat">
        <item name="drawer_item_background">#323232</item>
        <item name="section_background">@drawable/actionbar_background_textured_dark</item>
        <item name="activity_background">@color/colorBackgroundDark</item>
        <item name="cards_background">@android:color/background_dark</item>
        <item name="floating_button_color">@color/floating_button_colorDark</item>
        <item name="toolbar_style">@style/ToolBarStyle</item>
        <item name="preferences_title_light">@android:color/secondary_text_dark</item>
        <item name="text_transparent_background">@drawable/transparent_text_dark</item>
        <item name="item_selector">@drawable/item_selector_dark</item>
        <item name="segment_button">@drawable/segment_button_dark</item>
        <item name="segment_radio_left">@drawable/segment_radio_left_dark</item>
        <item name="segment_radio_middle">@drawable/segment_radio_middle_dark</item>
        <item name="segment_radio_right">@drawable/segment_radio_right_dark</item>
        <item name="ic_action_view_as_list">@drawable/ic_action_view_as_list_dark</item>
        <item name="ic_action_view_as_grid">@drawable/ic_action_view_as_grid_dark</item>
        <item name="colored_button">@android:style/Widget.Holo.Button</item>

        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">?attr/colorPrimary</item>
        <!--<item name="android:bottomDark">?attr/colorPrimary</item>-->
        <item name="android:bottomMedium">?attr/colorPrimary</item>
        <item name="android:centerBright">?attr/colorPrimary</item>
        <!--<item name="android:centerDark">?attr/colorPrimary</item>-->
        <item name="android:centerMedium">?attr/colorPrimary</item>
        <item name="android:fullBright">@android:color/holo_orange_light</item>
        <item name="android:fullDark">@android:color/holo_orange_light</item>
        <item name="android:topBright">@android:color/holo_blue_bright</item>
        <item name="android:topDark">@android:color/holo_blue_bright</item>
    </style>

    <style name="ToolBarStyle" parent="@style/Base.Widget.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--<item name="android:textColorPrimaryInverse">@android:color/white</item>-->

    </style>

    <!--<style name="ActionBar.Solid.Customlighttheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">-->
    <!--<item name="android:background">@drawable/ab_background_textured_customlighttheme</item>-->
    <!--<item name="android:backgroundStacked">@drawable/ab_stacked_solid_customlighttheme</item>-->
    <!--<item name="android:backgroundSplit">@drawable/ab_background_textured_customlighttheme-->
    <!--</item>-->
    <!--<item name="android:progressBarStyle">@style/ProgressBar.Customlighttheme</item>-->
    <!--</style>-->

    <style name="Colored_Button.Customlighttheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/colored_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.StartTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        action
        <item name="toolbar_style">@style/Base.Widget.AppCompat.ActionBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Drawer" parent="@android:style/Widget.TextView" />

    <style name="Drawer.Category" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <!--<item name="android:background">@drawable/md__category_background</item>-->

        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>