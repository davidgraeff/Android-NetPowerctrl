<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CustomLightTheme" parent="Theme.AppCompat.Light">
        <!-- background colors -->
        <item name="android:windowBackground">@color/colorSecondaryLight</item>
        <item name="activity_background">@android:color/background_light</item>
        <item name="cards_background">@android:color/background_light</item>
        <item name="transparent_rounded_background">@drawable/transparent_text_light</item>
        <!--<item name="showcaseViewStyle">@style/ShowcaseThemeLight</item>-->

        <!-- icons -->
        <item name="ic_action_good">@drawable/ic_action_good_light</item>
        <item name="ic_action_settings">@drawable/ic_action_settings_light</item>
        <item name="ic_action_make_available_offline">@drawable/ic_action_make_available_offline
        </item>
        <item name="ic_action_view_as_grid">@drawable/ic_action_view_as_grid</item>
        <item name="ic_action_download_themed">@drawable/ic_action_download</item>
        <item name="ic_action_flash_off_themed">@drawable/ic_action_flash_off</item>
        <item name="ic_action_flash_on_themed">@drawable/ic_action_flash_on</item>
        <item name="ic_action_shuffle_themed">@drawable/ic_action_shuffle</item>

        <!-- segment_button widget -->
        <item name="segment_button">@drawable/segment_button_light</item>
        <item name="segment_radio_left">@drawable/segment_radio_left_light</item>
        <item name="segment_radio_middle">@drawable/segment_radio_middle_light</item>
        <item name="segment_radio_right">@drawable/segment_radio_right_light</item>

        <!-- general app colors -->
        <item name="textColorPrimary">@android:color/white</item>
        <item name="colorPrimaryTransparent">@color/colorPrimaryTransparentLight</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorSecondaryLight</item>
        <item name="colorAccent">@color/colorSecondaryLight</item>
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>

        <!-- window modes -->
        <item name="toolbar_style_transparent">@style/ToolBarStyleTransparent</item>
        <item name="toolbar_style">@style/ToolBarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="mcab_background_color">?colorPrimaryDark</item>
        <item name="mcab_close_drawable">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="mcab_popup_theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="Theme.CustomLightThemeDialog" parent="Theme.CustomLightTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Theme.CustomDarkTheme" parent="Theme.AppCompat">
        <!-- background colors -->
        <item name="android:windowBackground">@drawable/background_textured_dark</item>
        <item name="activity_background">@color/colorBackgroundDark</item>
        <item name="cards_background">@color/colorBackgroundCardsDark</item>
        <item name="transparent_rounded_background">@drawable/transparent_text_dark</item>
        <!--<item name="showcaseViewStyle">@style/ShowcaseThemeDark</item>-->

        <!-- icons -->
        <item name="ic_action_good">@drawable/ic_action_good</item>
        <item name="ic_action_settings">@drawable/ic_action_settings</item>
        <item name="ic_action_make_available_offline">@drawable/ic_action_make_available_offline
        </item>
        <item name="ic_action_view_as_grid">@drawable/ic_action_view_as_grid_light</item>
        <item name="ic_action_download_themed">@drawable/ic_action_download_light</item>
        <item name="ic_action_flash_off_themed">@drawable/ic_action_flash_off_light</item>
        <item name="ic_action_flash_on_themed">@drawable/ic_action_flash_on_light</item>
        <item name="ic_action_shuffle_themed">@drawable/ic_action_shuffle_light</item>

        <!-- segment_button widget -->
        <item name="segment_button">@drawable/segment_button_dark</item>
        <item name="segment_radio_left">@drawable/segment_radio_left_dark</item>
        <item name="segment_radio_middle">@drawable/segment_radio_middle_dark</item>
        <item name="segment_radio_right">@drawable/segment_radio_right_dark</item>

        <!-- general app colors -->
        <item name="textColorPrimary">@android:color/white</item>
        <item name="colorPrimaryTransparent">@color/colorPrimaryTransparentDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>

        <!-- window modes -->
        <item name="toolbar_style_transparent">@style/ToolBarStyleTransparent</item>
        <item name="toolbar_style">@style/ToolBarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.CustomDarkThemeDialog" parent="Theme.CustomDarkTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>


    <style name="ToolBarStyleTransparent" parent="@style/Base.Widget.AppCompat.ActionBar">
        <item name="android:background">#66000000</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textSize">40sp</item>
        <!--<item name="android:textColorPrimaryInverse">@android:color/white</item>-->

    </style>

    <style name="ToolBarStyle" parent="@style/Base.Widget.AppCompat.ActionBar">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--<item name="android:textColorPrimaryInverse">@android:color/white</item>-->

    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.StartTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbar_style">@style/Base.Widget.AppCompat.ActionBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="FloatingActionButtonIcon">
        <item name="lmd_state">@xml/fab_icon_states</item>
        <item name="lmd_curState">0</item>
        <item name="lmd_padding">2dp</item>
        <item name="lmd_animDuration">400</item>
        <item name="lmd_interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="lmd_strokeSize">3dp</item>
        <item name="lmd_strokeColor">#FFFFFFFF</item>
        <item name="lmd_strokeCap">butt</item>
        <item name="lmd_strokeJoin">miter</item>
        <item name="lmd_clockwise">true</item>
    </style>

    <style name="EditTextLarge" parent="Material.Widget.EditText.Light">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="SnackBarMultiLine" parent="Material.Widget.SnackBar.Mobile.MultiLine">

    </style>

    <style name="SimpleDialog" parent="Material.App.Dialog.Simple">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>

    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>

    <style name="LinearProgressDrawableStyle" parent="Material.Drawable.LinearProgress">
        <item name="lpd_strokeSecondaryColor">#00000000</item>
    </style>

    <style name="FlatButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@null</item>
        <item name="rd_cornerRadius">4dp</item>
    </style>

    <style name="FlatColorButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@null</item>
        <item name="rd_backgroundColor">#33219AFF</item>
        <item name="rd_rippleColor">#33219AFF</item>
        <item name="rd_cornerRadius">4dp</item>
    </style>

    <style name="RaiseWaveButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@drawable/bg_bt_raise</item>
        <item name="rd_leftPadding">1dp</item>
        <item name="rd_topPadding">1dp</item>
        <item name="rd_rightPadding">1dp</item>
        <item name="rd_bottomPadding">2dp</item>
    </style>

    <style name="RaiseColorButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@drawable/bg_bt_raise_color</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">1dp</item>
        <item name="rd_topPadding">1dp</item>
        <item name="rd_rightPadding">1dp</item>
        <item name="rd_bottomPadding">2dp</item>
    </style>

    <style name="CheckBoxDrawable" parent="Material.Drawable.CheckBox" />
</resources>