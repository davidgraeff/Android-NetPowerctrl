    <!--<item name="android:background">@drawable/ab_background_textured_customlighttheme</item>-->
    <!--<item name="android:backgroundStacked">@drawable/ab_stacked_solid_customlighttheme</item>-->
    <!--<item name="android:backgroundSplit">@drawable/ab_background_textured_customlighttheme-->
    <!--</item>-->
    <!--<item name="android:progressBarStyle">@style/ProgressBar.Customlighttheme</item>-->
    <!--</style>-->

    <style name="Colored_Button.light" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/colored_button_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="Colored_Button.dark" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/colored_button_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.StartTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        action
        <item name="toolbar_style">@style/Base.Widget.AppCompat.ActionBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

</resources>