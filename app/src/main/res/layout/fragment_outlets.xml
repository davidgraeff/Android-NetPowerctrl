<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/list_outer_padding"
    android:paddingRight="@dimen/list_outer_padding">

    <TextView
        android:id="@+id/edit_hint"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimaryDark"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="Nach oben ziehen zum Bearbeiten"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <oly.netpowerctrl.ui.widgets.EnhancedSwipeRefreshLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/edit_hint">

        <android.support.v7.widget.RecyclerView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </oly.netpowerctrl.ui.widgets.EnhancedSwipeRefreshLayout>

    <TextView
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="?item_selector"
        android:maxWidth="220dp"
        android:padding="5dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="?text_transparent_background"
        android:padding="5dp"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:visibility="gone" />

    <TextView
        android:id="@+id/edit_hint_big"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimaryDark"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:paddingEnd="90dp"
        android:paddingRight="90dp"
        android:text="WÃ¤hle einen Eintrag um diesen zu bearbeiten. Klicke hier um den Bearbeitungsmodus zu verlassen."
        android:textAppearance="@android:style/TextAppearance.Small"
        android:visibility="invisible" />

    <oly.netpowerctrl.ui.widgets.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btnAdd"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        app:drawable="@android:drawable/ic_menu_add"
        app:mainColor="?attr/floating_button_color" />

    <oly.netpowerctrl.ui.widgets.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btnWirelessSettings"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@id/btnAdd"
        android:layout_toRightOf="@id/btnAdd"
        android:visibility="invisible"
        app:drawable="@android:drawable/ic_menu_preferences"
        app:mainColor="?attr/floating_button_color" />
</RelativeLayout>
