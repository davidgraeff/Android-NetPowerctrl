<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/list_outer_padding"
    android:paddingRight="@dimen/list_outer_padding">

    <uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ptr_layout"
        android:paddingTop="@dimen/list_inner_padding"
        android:paddingBottom="@dimen/list_inner_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>


    <LinearLayout
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:background="?item_selector"
            android:text="Es sind noch keine Zeitschaltungen eingerichtet."
            android:padding="5dp" />

        <Button
            android:id="@+id/btnChangeToDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/devices" />
    </LinearLayout>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?item_selector"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="left"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:paddingLeft="@dimen/list_outer_padding"
        android:paddingRight="@dimen/list_outer_padding" />

</RelativeLayout>
