<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/alarm_image"
        android:contentDescription="@string/alarm_device_name"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:scaleType="fitCenter"
        android:paddingRight="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:layout_toRightOf="@id/alarm_image"
        android:id="@+id/alarm_target"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:layout_alignStart="@id/alarm_target"
        android:layout_below="@id/alarm_target"
        android:id="@+id/alarm_weekdays"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_alignStart="@id/alarm_target"
        android:layout_below="@id/alarm_weekdays"
        android:id="@+id/alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_alignStart="@id/alarm_target"
        android:layout_below="@id/alarm_time"
        android:id="@+id/alarm_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAppearance="@android:style/TextAppearance.Medium" />

</RelativeLayout>