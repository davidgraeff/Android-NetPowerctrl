<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_outer_padding"
    android:layout_marginRight="@dimen/list_outer_padding"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:padding="5dp">

<ImageView
        android:id="@+id/device_connection_reachable"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/device_connection_reachable"
        android:layout_toRightOf="@id/device_connection_reachable"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/device_connection_reachable"
        android:layout_toRightOf="@id/device_connection_reachable"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>