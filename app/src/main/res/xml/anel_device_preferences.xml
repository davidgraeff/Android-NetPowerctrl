<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:dialogMessage="@string/device_name_summary"
        android:dialogTitle="@string/device_name"
        android:key="anel_name"
        android:persistent="false"
        android:summary="@string/device_name_summary"
        android:title="@string/device_name" />

    <EditTextPreference
        android:dialogMessage="@string/device_username_summary"
        android:dialogTitle="@string/device_username"
        android:key="anel_username"
        android:persistent="false"
        android:summary="@string/device_username_summary"
        android:title="@string/device_username" />

    <EditTextPreference
        android:dialogMessage="@string/device_password_summary"
        android:dialogTitle="@string/device_password"
        android:key="anel_password"
        android:persistent="false"
        android:summary="@string/device_password_summary"
        android:title="@string/device_password" />

    <PreferenceCategory android:title="@string/device_connection_preferences">
        <CheckBoxPreference
            android:key="anel_enabled"
            android:persistent="false"
            android:summary="@string/device_enabled_summary"
            android:title="@string/device_enabled" />

        <EditTextPreference
            android:dialogMessage="@string/device_ip_summary"
            android:dialogTitle="@string/device_ip"
            android:key="anel_ip"
            android:persistent="false"
            android:summary="@string/device_ip_summary"
            android:title="@string/device_ip" />

        <CheckBoxPreference
            android:key="anel_use_http"
            android:persistent="false"
            android:summary="@string/device_prefer_http_summary"
            android:title="@string/device_prefer_http" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/device_udp">
        <CheckBoxPreference
            android:key="anel_use_default_udp"
            android:persistent="false"
            android:summary="@string/device_default_ports_summary"
            android:title="@string/device_default_ports" />

        <EditTextPreference
            android:dialogMessage="@string/preference_standard_send_port_summary"
            android:dialogTitle="@string/device_send_udp_port"
            android:inputType="number"
            android:key="anel_udp_send"
            android:numeric="integer"
            android:persistent="false"
            android:summary="@string/preference_standard_send_port_summary"
            android:title="@string/device_send_udp_port" />

        <EditTextPreference
            android:dialogMessage="@string/preference_standard_recv_port_summary"
            android:dialogTitle="@string/device_receive_udp_port"
            android:inputType="number"
            android:key="anel_udp_receive"
            android:numeric="integer"
            android:persistent="false"
            android:summary="@string/preference_standard_recv_port_summary"
            android:title="@string/device_receive_udp_port" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/device_http">
        <EditTextPreference
            android:dialogMessage="@string/device_http_port_summary"
            android:dialogTitle="@string/device_http_port"
            android:inputType="number"
            android:key="anel_http"
            android:numeric="integer"
            android:persistent="false"
            android:summary="@string/device_http_port_summary"
            android:title="@string/device_http_port" />
    </PreferenceCategory>
</PreferenceScreen>