<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">

    <CheckBoxPreference
        android:defaultValue="@bool/maximum_energy_saving_mode"
        android:key="maximum_energy_saving_mode"
        android:summary="@string/preference_maximum_energy_saving_mode_summary"
        android:title="@string/preference_maximum_energy_saving_mode" />

    <PreferenceScreen
        android:key="nfc_bind"
        android:summary="@string/preference_nfc_bind_summary"
        android:title="@string/preference_nfc_bind" />

    <PreferenceCategory android:title="@string/preference_user_interface">
        <CheckBoxPreference
            android:defaultValue="@bool/use_dark_theme"
            android:key="use_dark_theme"
            android:summary="@string/preference_use_dark_theme_summary"
            android:title="@string/preference_use_dark_theme" />

        <CheckBoxPreference
            android:defaultValue="@bool/show_background"
            android:key="show_background"
            android:summary="@string/preference_show_background_summary"
            android:title="@string/preference_show_background" />

        <PreferenceScreen
            android:key="select_background_image"
            android:title="@string/preference_select_background_image" />

        <CheckBoxPreference
            android:defaultValue="@bool/smaller_click_execute_area"
            android:key="smaller_click_execute_area"
            android:summaryOff="@string/preference_smaller_click_execute_area_summary_off"
            android:summaryOn="@string/preference_smaller_click_execute_area_summary_on"
            android:title="@string/preference_smaller_click_execute_area" />

        <CheckBoxPreference
            android:defaultValue="@bool/show_persistent_notification"
            android:key="show_persistent_notification"
            android:summary="@string/preference_show_persistent_notification_summary"
            android:title="@string/preference_show_persistent_notification" />

        <CheckBoxPreference
            android:defaultValue="@bool/hide_not_reachable"
            android:key="hide_not_reachable"
            android:summary="@string/preference_hide_not_reachable_summary"
            android:title="@string/preference_hide_not_reachable" />

        <CheckBoxPreference
            android:defaultValue="@bool/notify_on_non_reachable"
            android:key="notify_on_non_reachable"
            android:summary="@string/preference_notify_on_non_reachable_summary"
            android:title="@string/preference_notify_on_non_reachable" />

        <CheckBoxPreference
            android:defaultValue="@bool/fullscreen"
            android:key="fullscreen"
            android:summary="@string/preference_fullscreen_summary"
            android:title="@string/preference_fullscreen" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_error_report_tool">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="acra.enable"
            android:summaryOff="@string/preference_acra_disabled"
            android:summaryOn="@string/preference_acra_enabled"
            android:title="@string/preference_enable_acra" />

        <EditTextPreference
            android:dialogMessage="@string/pref_acra_user_email_summary"
            android:key="acra.user.email"
            android:summary="@string/pref_acra_user_email_summary"
            android:title="@string/pref_acra_user_email" />

        <PreferenceScreen
            android:key="issues"
            android:summary="@string/issues_see_at_feedback"
            android:title="@string/issues" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="extensions"
        android:title="@string/extensions">
        <CheckBoxPreference
            android:defaultValue="@bool/load_extensions"
            android:key="load_extensions"
            android:summary="@string/preference_load_extensions_summary"
            android:title="@string/preference_load_extensions" />

        <PreferenceScreen
            android:key="show_extensions"
            android:title="@string/show_extensions_in_market" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="widgets"
        android:title="@string/pref_widgets">

        <CheckBoxPreference
            android:defaultValue="@bool/widget_show_title"
            android:key="widget_show_title"
            android:summary="@string/preference_widget_show_title_summary"
            android:title="@string/preference_widget_show_title" />

        <CheckBoxPreference
            android:defaultValue="@bool/widget_show_title"
            android:key="widget_show_status"
            android:summary="@string/preference_widget_show_status_summary"
            android:title="@string/preference_widget_show_status" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preferences_log_screen">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="use_log_energy"
            android:summary="@string/preference_use_log_energy_summary"
            android:title="@string/preference_use_log_energy" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="use_log_alarm"
            android:summary="@string/preference_use_log_alarm_summary"
            android:title="@string/preference_use_log_alarm" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="use_log_widgets"
            android:summary="@string/preference_log_widgets_summary"
            android:title="@string/preference_log_widgets" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="use_log_extensions"
            android:summary="@string/preference_log_extensions_summary"
            android:title="@string/preference_log_extensions" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="use_log_detect"
            android:summary="@string/preference_log_detect_summary"
            android:title="@string/preference_log_detect" />

        <PreferenceScreen
            android:key="open_log"
            android:title="@string/log_screen" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preferences_backup">
        <EditTextPreference
            android:dialogMessage="@string/backup_password_summary"
            android:key="backup_password"
            android:summary="@string/backup_password_summary"
            android:title="@string/backup_password" />

        <PreferenceScreen
            android:key="import"
            android:summary="@string/backup_import_summary"
            android:title="@string/backup_import" />

        <PreferenceScreen
            android:key="export"
            android:summary="@string/backup_export_summary"
            android:title="@string/backup_export" />
    </PreferenceCategory>
</PreferenceScreen>