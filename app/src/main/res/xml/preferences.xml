<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings">

    <EditTextPreference
        android:key="standard_send_port"
        android:title="@string/preference_standard_send_port"
        android:inputType="number"
        android:numeric="integer"
        android:defaultValue="@integer/default_send_port"
        android:dialogMessage="@string/preference_standard_send_port_summary"
        android:summary="@string/preference_standard_send_port_summary"
        android:dialogTitle="@string/preference_standard_send_port" />

    <EditTextPreference
        android:key="standard_receive_port"
        android:title="@string/preference_standard_recv_port"
        android:inputType="number"
        android:numeric="integer"
        android:defaultValue="@integer/default_receive_port"
        android:dialogMessage="@string/preference_standard_recv_port_summary"
        android:summary="@string/preference_standard_recv_port_summary"
        android:dialogTitle="@string/preference_standard_recv_port" />

    <EditTextPreference
        android:key="max_favourites_groups"
        android:title="@string/preference_max_favourites_groups"
        android:inputType="number"
        android:numeric="integer"
        android:defaultValue="@integer/max_favourites_groups"
        android:dialogMessage="@string/preference_max_favourites_groups_summary"
        android:dialogTitle="@string/preference_standard_recv_port" />

    <CheckBoxPreference
        android:key="use_dark_theme"
        android:title="@string/preference_use_dark_theme"
        android:defaultValue="@bool/use_dark_theme"
        android:summary="@string/preference_use_dark_theme_summary" />

    <CheckBoxPreference
        android:key="animations_enabled"
        android:title="@string/preference_animations_enabled"
        android:defaultValue="@bool/animations_enabled"
        android:summary="@string/preference_animations_enabled_summary" />

    <CheckBoxPreference
        android:key="notify_on_stop"
        android:title="@string/preference_notify_on_stop"
        android:defaultValue="@bool/notify_on_stop"
        android:summary="@string/preference_notify_on_stop_summary" />

    <CheckBoxPreference
        android:key="load_plugins"
        android:title="@string/preference_load_plugins"
        android:defaultValue="@bool/load_plugins"
        android:summary="@string/preference_load_plugins_summary" />

    <CheckBoxPreference
        android:key="use_energy_saving_mode"
        android:title="@string/preference_use_energy_saving_mode"
        android:defaultValue="@bool/use_energy_saving_mode"
        android:summary="@string/preference_use_energy_saving_mode_summary" />

    <CheckBoxPreference
        android:key="wakeup_energy_saving_mode"
        android:title="@string/preference_wakeup_energy_saving_mode"
        android:defaultValue="@bool/wakeup_energy_saving_mode"
        android:summary="@string/preference_wakeup_energy_saving_mode_summary" />

    <CheckBoxPreference
        android:key="use_log_energy_saving_mode"
        android:title="@string/preference_use_log_energy_saving_mode"
        android:defaultValue="@bool/use_log_energy_saving_mod"
        android:summary="@string/preference_use_log_energy_saving_mod_summary"
        android:dependency="use_energy_saving_mode" />

    <PreferenceScreen
        android:key="open_log"
        android:title="@string/energy_saving_mode_log" />

    <PreferenceCategory
        android:title="@string/pref_widgets"
        android:key="widgets">

    </PreferenceCategory>


</PreferenceScreen>