<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Widget">

    <CheckBoxPreference
        android:key="widget_show_text"
        android:title="@string/preference_widget_show_text"
        android:summary="@string/preference_widget_show_text_summary"
        android:defaultValue="@bool/widget_show_text" />

    <Preference
        android:key="widget_image_on"
        android:title="@string/widget_image_on" />

    <Preference
        android:key="widget_image_off"
        android:title="@string/widget_image_off" />

    <Preference
        android:key="widget_image_not_reachable"
        android:title="@string/widget_image_not_reachable" />
</PreferenceScreen>