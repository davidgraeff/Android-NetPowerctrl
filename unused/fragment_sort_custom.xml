<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customSortContainer" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_weight="1" android:orientation="vertical">

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:text="@string/scene_create_available" />

        <ListView android:id="@+id/list_available" android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_weight="1" android:orientation="vertical">

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:text="@string/list_sorted" />

        <ListView android:id="@+id/list_sorted" android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
