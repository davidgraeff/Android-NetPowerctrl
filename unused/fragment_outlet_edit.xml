<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="?attr/activity_background">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:animateLayoutChanges="true" android:orientation="vertical">

            <include layout="@layout/executable_edit_top" android:layout_width="match_parent"
                android:layout_height="100dp" />

            <include layout="@layout/executable_groups" />

        </LinearLayout>
    </ScrollView>

    <oly.netpowerctrl.ui.widgets.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/btnOk"
        android:layout_width="72dp" android:layout_height="72dp"
        android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
        app:mainColor="?attr/floating_button_color" />

</RelativeLayout>
