<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:layout_gravity="right" android:layout_marginEnd="5dip" android:layout_marginRight="5dip"
    android:layout_weight="1" android:gravity="right" android:orientation="horizontal"
    android:paddingLeft="8dip" android:paddingStart="8dip">

    <Button android:id="@+id/action_mode_close_button"
        style="?android:attr/actionModeCloseButtonStyle" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center"
        android:drawableLeft="?android:attr/actionModeCloseDrawable" android:scaleType="fitCenter"
        android:text="@string/menu_back"
        android:textAppearance="?android:attr/actionMenuTextAppearance"
        android:textColor="?android:attr/actionMenuTextColor" />

    <Button android:id="@+id/action_mode_remove_button"
        style="?android:attr/actionModeCloseButtonStyle" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center"
        android:drawableLeft="@android:drawable/ic_menu_delete" android:scaleType="fitCenter"
        android:text="@string/remove"
        android:textAppearance="?android:attr/actionMenuTextAppearance"
        android:textColor="?android:attr/actionMenuTextColor" />
</LinearLayout>